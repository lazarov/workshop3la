!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    = render "devise/sessions/new"
    = render "devise/registrations/new"
    = render "devise/registrations/edit"
    = render "devise/passwords/new"
    .container

      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            %span.navbar-brand #{AppConfig.workshops_name}
            %form.navbar-form.navbar-left
          %p.navbar-text.navbar-right
            - if signed_in?
              Welcome! #{ current_user.firstname.titleize }
              = link_to 'Edit', edit_user_registration_path, "data-toggle" => "modal", "data-target" => "#edit", class: 'btn btn-success'
              = link_to 'Sign Out', destroy_user_session_path, :method => 'delete', class: 'btn btn-primary'
            - else
              = link_to 'Sign Up', new_user_registration_path, "data-toggle" => "modal", "data-target" => "#sign_up", class: 'btn btn-primary'
              = link_to 'Sing In', new_user_session_path, "data-toggle" => "modal" , "data-target" => "#login", class: 'btn btn-primary'

      .container-fluid
        .row
          .col-lg-12
            = render 'shared/flash'
            = yield
